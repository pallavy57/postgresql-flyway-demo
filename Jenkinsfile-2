pipeline {
  agent any 
  environment {
    DB_CREDS=credentials('db-creds')
  }
  stages {
    stage('Verify version') {
      steps {
        sh 'docker run --rm flyway/flyway:latest version'
      }
    }
    stage('migrate') {
      steps {
        sh 'docker run --rm -v $WORKSPACE/Amazonish_02:/flyway/sql -v $WORKSPACE/conf:/flyway/conf flyway/flyway:latest  migrate'
      }
    }
    stage('validate') {
      steps {
        sh 'docker run --rm -v $WORKSPACE/Amazonish_02:/flyway/sql -v $WORKSPACE/conf:/flyway/conf flyway/flyway:latest validate'
      }
    }
    stage('info') {
      steps {
        sh 'docker run --rm -v $WORKSPACE/Amazonish_02:/flyway/sql -v $WORKSPACE/conf:/flyway/conf flyway/flyway:latest  info'
      }
    }
  }
}